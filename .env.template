# Environment variables for Prostate Cancer Classification Project
# Copy this file to .env and fill in your values

# Dataset Configuration
DATASET_PATH=./data
RESULTS_PATH=./results

# Model Configuration
MODEL_CHECKPOINT_DIR=./checkpoints
EXPERIMENT_NAME=prostate_classification

# Training Configuration
BATCH_SIZE=4
LEARNING_RATE=1e-4
EPOCHS=25

# Hardware Configuration
DEVICE=cuda  # cuda, cpu, or auto
NUM_WORKERS=2

# Logging Configuration
LOG_LEVEL=INFO
WANDB_PROJECT=prostate-classification  # Optional: Weights & Biases project name
WANDB_API_KEY=your_wandb_api_key_here  # Optional: W&B API key

# Dataset Download
GDRIVE_API_KEY=your_google_drive_api_key  # Optional: If needed for dataset access
